# ExoplanetAI - Render Environment Variables Example
# Copy this file and configure in Render Dashboard

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
PORT=8001

# API Keys (Set these in Render Dashboard as secrets)
NASA_API_KEY=your_nasa_api_key_here
NASA_ESA_API_KEY=your_esa_api_key_here

# JWT Authentication (Auto-generated in Render)
JWT_SECRET_KEY=auto_generated_by_render
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Cache (Auto-configured from Render Redis service)
CACHE_REDIS_URL=redis://default:password@host:port

# CORS Settings
ALLOWED_ORIGINS=https://exoplanet-ai-frontend.onrender.com,http://localhost:5173

# Database (Optional - if using PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Data Sources
DATA_CACHE_TTL_HOURS=6
LIGHTCURVE_CACHE_TTL_HOURS=2

# ML Model Settings
ML_MODEL_PATH=/app/data/models
ML_BATCH_SIZE=32
ML_TIMEOUT_SECONDS=30

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_AUTO_DISCOVERY=true
ENABLE_ML_CLASSIFICATION=true
ENABLE_BLS_ANALYSIS=true
