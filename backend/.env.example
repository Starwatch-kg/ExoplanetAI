# ExoplanetAI Backend - Environment Variables Example
# Copy this file to .env and configure for local development

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=DEBUG
PORT=8001

# API Keys (Get from https://api.nasa.gov/)
NASA_API_KEY=DEMO_KEY
NASA_ESA_API_KEY=

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Cache (optional for local development)
CACHE_REDIS_URL=redis://localhost:6379
# Leave empty to use file-based cache fallback
# CACHE_REDIS_URL=

# CORS Settings
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:5174,http://localhost:5175,http://localhost:5176

# Database (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/exoplanet_ai

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Data Sources
DATA_CACHE_TTL_HOURS=6
LIGHTCURVE_CACHE_TTL_HOURS=2

# ML Model Settings
ML_MODEL_PATH=./data/models
ML_BATCH_SIZE=32
ML_TIMEOUT_SECONDS=30

# Monitoring
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_AUTO_DISCOVERY=true
ENABLE_ML_CLASSIFICATION=true
ENABLE_BLS_ANALYSIS=true

# Debug
DEBUG=false
TESTING=false
