# База данных
DATABASE_URL=sqlite:///./exoplanet_ai.db

# Настройки приложения
ENABLE_AI_FEATURES=false
ENABLE_DATABASE=true

# Настройки безопасности  
SECRET_KEY=exoplanet_ai_production_secret_key_2024_v2_secure
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Настройки логирования
LOG_LEVEL=INFO

# Настройки CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000,https://exoplanet-ai.netlify.app

# Настройки ИИ моделей
MODEL_PATH=./ai/models
CACHE_SIZE=5000
BATCH_SIZE=64

# Настройки внешних API
MAST_API_URL=https://mast.stsci.edu/api/v0.1
SIMBAD_API_URL=http://simbad.u-strasbg.fr/simbad/sim-tap
EXOPLANET_ARCHIVE_URL=https://exoplanetarchive.ipac.caltech.edu/TAP/sync

# Настройки производительности
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300
BLS_MAX_PERIODS=5000
LIGHTCURVE_MAX_POINTS=50000

# Настройки кэширования
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
